doctype html
html
  head
    title= title
    // CSS file for project
    link(rel='stylesheet', href='/stylesheets/style.css')

    // Bootstrap, Google - Font
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css")
    link(rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Tangerine')
  body
    // The actual nav-bar at the top
    div(class="navbar navbar-inverse navbar-static-top" role="navigation")
      div(class="container")
        a(class="navbar-brand" href="/" style="font-size: 24px") Ride-Share

        ul(class="nav navbar-nav navbar-right")
          li(class="active"): a(href="/") Home
          li: a(href="/new-ride") Offer Ride
          li: a(href="#section-2") About Us
          li: a(href="#section-3") Contact Me
    block content

    // JQuery, JQuery-UI, Bootstrap
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
    script(src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.10/jquery-ui.min.js")

    // scroll-it.js
    script(src="javascripts/scroll-it.js")